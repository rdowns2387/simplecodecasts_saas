<div class="row">
    <div class="col-md-8 col-md-offset-2">
        <h1 class="text-center">The Dev Match Community</h1>
        <p class="text-center">Welcome to the Dev Match community. Don't see yourself below? Fill out a profile so people can look you up!</p>
        <ul class="list-unstyled">
            <%= @users.each do |user| %>
                <% if user.profile %>
                    <li>
                        <div class="well row <%= cycle('white-bg', '') %>" >
                            <div class="col-sm-4 text-center">
                                <%= link_to user do %>
                                    <%= image_tag user.profile.avatar.url(:thumb), class:"user-avatar"%> 
                                <% end %>
                            </div>
                            <div class="col-sm-8">
                                <%= link_to user do %>
                                    <h2>
                                        <%= user.profile.first_name %> <%= user.profile.last_name %>
                                        <% if user.plan_id ==2 %>
                                            <span class="label label-danger">PRO</span>
                                        <% end %>
                                    </h2>
                                <%end %>
                                <p><%= user.profile.job_title %>
                                    
                                </p>
                            </div>
                            
                       
                        </div>
                     </li>
                <% end %>                    
                
            <% end %>  
        </ul>
    </div>
   
</div>
